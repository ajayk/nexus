<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>org.sonatype.nexus</groupId>
    <artifactId>guice-nexus</artifactId>
    <version>1.7.1-SNAPSHOT</version>
  </parent>

  <packaging>bundle</packaging>

  <artifactId>spice-inject-nexus</artifactId>

  <name>Spice - Inject (Nexus bean support)</name>

  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.felix</groupId>
        <artifactId>maven-bundle-plugin</artifactId>
        <extensions>true</extensions>
        <configuration>
          <excludeDependencies>
            <!-- fragment host and external dependencies -->
            spice-inject-bean,nexus-*;groupId=org.sonatype.nexus
          </excludeDependencies>
          <instructions>
            <Bundle-SymbolicName>
              org.sonatype.inject.nexus
            </Bundle-SymbolicName>
            <Fragment-Host>
              org.sonatype.inject
            </Fragment-Host>
            <Export-Package>
              org.sonatype.nexus.*;-noimport:=true;-split-package:=merge-first
            </Export-Package>
            <Private-Package>
              org.sonatype.guice.*,org.sonatype.plugin.metadata,org.objectweb.asm.*
            </Private-Package>
          </instructions>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>1.3.2</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <artifactSet>
                <includes>
                  <include>${project.groupId}:${project.artifactId}</include>
                </includes>
              </artifactSet>
              <relocations>
                <relocation>
                  <pattern>org.objectweb</pattern>
                  <shadedPattern>org.sonatype.guice</shadedPattern>
                </relocation>
              </relocations>
              <filters>
                <filter>
                  <artifact>*:*</artifact>
                  <excludes>
                    <!-- host bundle already has these classes -->
                    <exclude>org/sonatype/guice/bean/**</exclude>
                    <exclude>org/sonatype/guice/plexus/**</exclude>
                    <exclude>org/objectweb/**</exclude>
                  </excludes>
                </filter>
              </filters>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-dependency-plugin</artifactId>
        <executions>
          <execution>
            <id>unpack-source</id>
            <phase>prepare-package</phase>
            <goals>
              <goal>unpack-dependencies</goal>
            </goals>
            <configuration>
              <classifier>sources</classifier>
              <failOnMissingClassifierArtifact>false</failOnMissingClassifierArtifact>
              <outputDirectory>${project.build.directory}/sources</outputDirectory>
              <includeArtifactIds>
                guice-nexus-binders,guice-nexus-scanners,guice-nexus-shim
              </includeArtifactIds>
              <silent>true</silent>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>build-helper-maven-plugin</artifactId>
        <version>1.4</version>
        <executions>
          <execution>
            <id>add-source</id>
            <phase>prepare-package</phase>
            <goals>
              <goal>add-source</goal>
            </goals>
            <configuration>
              <sources>
                <source>${project.build.directory}/sources</source>
              </sources>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>

  <dependencies>
    <dependency>
      <groupId>org.sonatype.spice</groupId>
      <artifactId>spice-inject-bean</artifactId>
    </dependency>
    <dependency>
      <groupId>org.sonatype.nexus</groupId>
      <artifactId>guice-nexus-shim</artifactId>
      <optional>true</optional>
    </dependency>
  </dependencies>

</project>
