<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>org.sonatype.nexus</groupId>
		<artifactId>nexus-test-harness</artifactId>
		<version>1.0.0-beta-4-SNAPSHOT</version>
	</parent>
	<artifactId>nexus-test-harness-launcher</artifactId>
	<name>Nexus Test Harness Launcher</name>
  <properties>
    <config-expanded-dir>target/config</config-expanded-dir>
    <work-expanded-dir>target/work</work-expanded-dir>
  </properties>
  <dependencies>
    <dependency>
      <groupId>org.sonatype.nexus</groupId>
      <artifactId>nexus-test-harness-config</artifactId>
      <version>${project.version}</version>
      <type>zip</type>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>org.sonatype.nexus</groupId>
      <artifactId>nexus-test-harness-work</artifactId>
      <version>${project.version}</version>
      <type>zip</type>
      <scope>provided</scope>
    </dependency>
  </dependencies>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-dependency-plugin</artifactId>
        <version>2.0</version>
        <executions>
          <execution>
            <id>unpack-config</id>
            <phase>generate-resources</phase>
            <goals>
              <goal>unpack-dependencies</goal>
            </goals>
            <configuration>
              <includeArtifactIds>nexus-test-harness-config</includeArtifactIds>
              <outputDirectory>${config-expanded-dir}</outputDirectory>
            </configuration>
          </execution>
          <execution>
            <id>unpack-work</id>
            <phase>generate-resources</phase>
            <goals>
              <goal>unpack-dependencies</goal>
            </goals>
            <configuration>
              <includeArtifactIds>nexus-test-harness-work</includeArtifactIds>
              <outputDirectory>${work-expanded-dir}</outputDirectory>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>