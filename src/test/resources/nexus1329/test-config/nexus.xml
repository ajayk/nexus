<?xml version="1.0" encoding="UTF-8"?>
<nexusConfiguration>
  <version>1.0.7</version>
  <applicationLogDirectory>${project.build.directory}/logs/</applicationLogDirectory>

  <smtpConfiguration>
    <host>localhost</host>
    <port>${email-server-port}</port>
    <sslEnabled>false</sslEnabled>
    <tlsEnabled>false</tlsEnabled>
    <username>smtp-username</username>
    <password>smtp-password</password>
    <debugMode>false</debugMode>
    <systemEmailAddress>system@nexus.org</systemEmailAddress>
  </smtpConfiguration>

  <security>
    <enabled>false</enabled>
    <anonymousAccessEnabled>true</anonymousAccessEnabled>
    <anonymousUsername>anonymous</anonymousUsername>
    <anonymousPassword>anonymous</anonymousPassword>
    <realms>
      <realm>XmlAuthenticatingRealm</realm>
      <realm>NexusMethodAuthorizingRealm</realm>
      <realm>NexusTargetAuthorizingRealm</realm>
    </realms>
  </security>
  <globalConnectionSettings />
  <restApi />

  <httpProxy>
    <enabled>false</enabled>
  </httpProxy>
  <routing>
    <groups />
  </routing>
  <repositories>


    <repository>
      <id>nexus1329-repo</id>
      <name>Repo NEXUS-1329 With Mirrors</name>
      <remoteStorage>
        <url>${proxy-repo-base-url}nexus1329/repository</url>
      </remoteStorage>
      <!-- TODO: Add mirror to config, if not configured via test -->
      <!-- <mirror>${proxy-repo-base-url}nexus1326/mirror1<mirror>-->
      <!-- <mirror>${proxy-repo-base-url}nexus1326/mirror2<mirror>-->
    </repository>
  </repositories>
  
  <repositoryGrouping>
    <repositoryGroups>

      <repositoryGroup>
        <groupId>nexus1329-group</groupId>
        <name>nexus1329-group</name>
        <repositories>
          <repository>nexus1329-repo</repository>
        </repositories>
      </repositoryGroup>

    </repositoryGroups>
  </repositoryGrouping>


</nexusConfiguration>