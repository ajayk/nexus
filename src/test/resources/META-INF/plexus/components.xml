<component-set>
  <components>
    <component>
      <role>org.sonatype.jettytestsuite.ServletServer</role>
      <implementation>org.sonatype.jettytestsuite.ServletServer</implementation>
      <instantiation-strategy>singleton</instantiation-strategy>
      <configuration>
        <port>56129</port>
        <webappContexts>
          <webappContext>
            <name>remote</name>
            <servletInfos>
              <servletInfo>
                <mapping>/*</mapping>
                <servletClass>org.mortbay.jetty.servlet.DefaultServlet</servletClass>
                <parameters>
                  <property>
                    <name>resourceBase</name>
                    <value>S:\\nexus-test-harness-launcher-2914\\target\\nexus\\proxy-repo</value>
                  </property>
                  <property>
                    <name>dirAllowed</name>
                    <value>true</value>
                  </property>
                </parameters>
              </servletInfo>
            </servletInfos>
          </webappContext>
        </webappContexts>
      </configuration>
    </component>

    <component>
      <role>org.sonatype.jettytestsuite.ProxyServer</role>
      <implementation>org.sonatype.jettytestsuite.ProxyServer</implementation>
      <instantiation-strategy>singleton</instantiation-strategy>
      <configuration>
        <port>56135</port>
      </configuration>
    </component>

    <component>
      <role>org.sonatype.jettytestsuite.ControlledServer</role>
      <implementation>org.sonatype.jettytestsuite.ControlledServer</implementation>
      <configuration>
        <port>56135</port>
      </configuration>
    </component>

    <component>
      <role>org.sonatype.jettytestsuite.ServletServer</role>
      <role-hint>secure</role-hint>
      <implementation>org.sonatype.jettytestsuite.ServletServer</implementation>
      <instantiation-strategy>singleton</instantiation-strategy>
      <configuration>
        <port>56129</port>
        <webappContexts>
          <webappContext>
            <name>remote</name>
            <authenticationInfo>
              <authMethod>BASIC</authMethod>
              <credentialsFilePath>S:\\nexus-test-harness-launcher-2914/target/resources/default-configs/realm.properties</credentialsFilePath>
            </authenticationInfo>
            <servletInfos>
              <servletInfo>
                <mapping>/*</mapping>
                <servletClass>org.mortbay.jetty.servlet.DefaultServlet</servletClass>
                <parameters>
                  <property>
                    <name>resourceBase</name>
                    <value>S:\\nexus-test-harness-launcher-2914\\target\\nexus\\proxy-repo</value>
                  </property>
                  <property>
                    <name>dirAllowed</name>
                    <value>true</value>
                  </property>
                </parameters>
              </servletInfo>
            </servletInfos>
          </webappContext>
        </webappContexts>
      </configuration>
    </component>

  </components>
</component-set>
